<div class="container mt-3">
    <h2>Sản phẩm</h2>
    <table class="table table-bordered table-sm">
      <thead>
        <tr>
          <th>Tên sản phẩm</th>
          <th>Giá</th>
          <th>Số lượng</th>
          <th>Hình</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}
        <tr>
          <td>{{this.tenSp}}</td>
          <td>{{this.gia}}</td>
          <td>{{this.soLuong}}</td>
          <td>
            <img src="/Upload/{{this.hinhSp}}" alt="" width="100" height="100">
          </td>
          <td>
            <a href="/sanphamupdate.html/{{this._id}}">update</a> |
            {{!-- <a href="/sanphamupdate.html/{{this._id}}"> update<i class="fa fa-pencil fa-lg" aria-hidden="true"></i> </a> / --}}
            <a href="/delete/{{this._id}}" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này ?');"> <i class='fa fa-trash fa-lg' aria-hidden="true"></i>
            delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  